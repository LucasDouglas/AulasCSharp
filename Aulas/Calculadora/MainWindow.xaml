            <Button x:Name="num5" Content="5" HorizontalAlignment="Left" Margin="45,81,0,0" VerticalAlignment="Top" Width="39" Height="29"/>
            <Button x:Name="num6" Content="6" HorizontalAlignment="Left" Margin="89,81,0,0" VerticalAlignment="Top" Width="40" Height="29"/>
